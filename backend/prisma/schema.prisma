generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model LiquidIntake {
  id          Int @id @default(autoincrement())
  patientId   Int
  liquidType  String
  intake      Float
  recordedAt  DateTime @default(now())
}